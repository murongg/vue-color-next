{
  "name": "vue-color-next",
  "version": "0.2.3",
  "packageManager": "pnpm@7.1.5",
  "description": "ðŸŽ¨ Vue Color Picker Component for Vue 3.x",
  "author": "MuRong <admin@imuboy.cn>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/murongg",
  "homepage": "https://github.com/murongg/vue-color-next#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/murongg/vue-color-next.git"
  },
  "bugs": {
    "url": "https://github.com/murongg/vue-color-next/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "color",
    "color picker",
    "component",
    "picker"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.min.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c && npm run build:css",
    "build:css": "gulp -f scripts/gulpfile.ts --require @esbuild-kit/cjs-loader",
    "dev": "unbuild --stub",
    "demo:dev": "pnpm run -C examples dev",
    "demo:build": "pnpm run -C examples build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "prepublishOnly": "nr build",
    "release": "esno scripts/release.ts && pnpm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "clamp": "^1.0.1",
    "throttle-debounce": "^5.0.0",
    "tinycolor2": "^1.4.2",
    "vue-demi": "^0.13.6"
  },
  "devDependencies": {
    "@babel/types": "^7.17.0",
    "@esbuild-kit/cjs-loader": "^2.3.2",
    "@murongg/eslint-config": "^0.1.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/clamp": "^1.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.9",
    "@types/gulp-clean-css": "^4.3.0",
    "@types/gulp-rename": "^2.0.1",
    "@types/node": "^17.0.35",
    "@types/throttle-debounce": "^5.0.0",
    "@types/through2": "^2.0.36",
    "@types/tinycolor2": "^1.4.3",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vitejs/plugin-vue-jsx": "^2.0.0",
    "@vue/composition-api": "^1.7.0",
    "bumpp": "^8.2.1",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.16.0",
    "esno": "^0.16.3",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-rename": "^2.0.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.0",
    "pnpm": "^7.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-uglify": "^6.0.4",
    "through2": "^4.0.2",
    "typescript": "^4.7.3",
    "unbuild": "^0.7.4",
    "vite": "^3.0.4",
    "vite-plugin-pages": "^0.25.0",
    "vitest": "^0.12.9",
    "vue": "^3.2.37"
  },
  "lint-staged": {
    "*": "pnpm run lint:fix"
  }
}
